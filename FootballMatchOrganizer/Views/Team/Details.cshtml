    //});

    $('.removePlayerButton').on('click', function () {
        var playerId = $(this).data('id');
        console.log("OOO: " + document.getElementById('player-id').value);
        $("#player-id").val(playerId);
        $("#removePlayerModal").modal("show");
    });

